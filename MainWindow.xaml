<Window x:Class="Alvin_P1_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alvin_P1_API"
        mc:Ignorable="d"
        Title="Parcial AlvinDJA" Height="211" Width="382">
    <Grid >
        <StackPanel>
            <StackPanel Orientation = "Horizontal">
                <Menu Height="18">
                    <MenuItem Header="Registros" Click="MenuItem_Click">
                        <MenuItem x:Name="rPrestamo" Header="Registro de Prestamos" />
                        <MenuItem x:Name="rPersona" Header="Registro de Personas" />
                    </MenuItem>
                </Menu>

                <Menu Height="18">
                    <MenuItem Header="Consultas">
                        <MenuItem x:Name="cPrestamo" Header="Consulta de Prestamos" />
                        <MenuItem x:Name="cPersona" Header="Consulta de Personas" />
                    </MenuItem>
                </Menu>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
